# ==================================
# Next.js Boilerplate
# Environment Variables
# ==================================

# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# ==================================
# Application
# ==================================

# App URL (used for absolute URLs, SEO, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# App Name
NEXT_PUBLIC_APP_NAME="My App"

# ==================================
# API Configuration
# ==================================

# API base URL (defaults to /api if not set)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ==================================
# Authentication (Optional)
# ==================================

# Auth secret (generate with: openssl rand -base64 32)
# AUTH_SECRET=

# ==================================
# Zylo SDK / Supabase
# ==================================

# Supabase connection (injected by Zylo at runtime)
NEXT_PUBLIC_SUPABASE_URL=https://thrpmonnayuowydjjwjk.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=sb_publishable_iMq5_W6nIUpRjOYQ8uGxDA_vqwYcuk6

# ==================================
# Database (Optional - for custom DB)
# ==================================

# Database connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/mydb

# ==================================
# External Services (Optional)
# ==================================

# Analytics
# NEXT_PUBLIC_GA_ID=
# NEXT_PUBLIC_POSTHOG_KEY=

# Error Tracking
# NEXT_PUBLIC_SENTRY_DSN=

# Email
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@example.com

# File Storage
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=

# ==================================
# Feature Flags (Optional)
# ==================================

# NEXT_PUBLIC_FEATURE_ANALYTICS=true
# NEXT_PUBLIC_FEATURE_CHAT=false

# ==================================
# Development (Optional)
# ==================================

# Enable debug logging
# NEXT_PUBLIC_DEBUG=false

# Mock API responses
# NEXT_PUBLIC_MOCK_API=false
